<!DOCTYPE html><html><head>  <title>    <%=title %>  </title></head><body><form action="/signup" method="post"> 	<div>        <label>Username:</label>        <input type="text" name="name" />        <%= messages.errors && message.errors.name ? messages.errors.name.message : '' %>    </div>	<div>        <label>Email:</label>        <input type="text" name="email" />        <%= messages.errors && message.errors.email ? messages.errors.email.message : '' %>    </div>    <div>        <label>Password:</label>        <input type="password" name="password" />        <%= messages.errors && message.errors.password ? messages.errors.password.message : '' %>    </div>    <div>        <label>Password Verification:</label>        <input type="password" name="password_verification" />    </div>      <div>        <input type="submit" value="Create User" />    </div></form></body></html>